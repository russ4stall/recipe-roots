<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.github.russ4stall.reciperoots.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.github.russ4stall.reciperoots.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyRecipesServlet</servlet-name>
        <servlet-class>com.github.russ4stall.reciperoots.MyRecipesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyRecipesServlet</servlet-name>
        <url-pattern>/myrecipes</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.github.russ4stall.reciperoots.HomeServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewRecipeServlet</servlet-name>
        <servlet-class>com.github.russ4stall.reciperoots.ViewRecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewRecipeServlet</servlet-name>
        <url-pattern>/viewrecipe</url-pattern>
    </servlet-mapping>

</web-app>

